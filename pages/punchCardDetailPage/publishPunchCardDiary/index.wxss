.container {
    width: 100%;
    height: 100%;
}

/*文本内容编辑区域*/
.text-content-edit-area {
    width: auto;
    height: auto;
    margin: 0 15px 10px 15px;
}
.text-content-edit-area > textarea {
    width: 100%;
    min-height: 80px;
    max-height: 300px;
    height: auto;
    line-height: 1.4;
    font-size: 18px;
    color: black;
}
.text-content-num-notice {
    font-size: 13px;
    color: #C9C9C9;
    text-align: right;
}

/*输入为空的提示信息样式*/
.edit-diary-notice {
    font-size: 17px;
    color: #8a8a8a;
}


/*图片、音频、视频添加上传按钮*/
.upload-btn-list {
    width: auto;
    height: auto;
    margin-left: 15px;

    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    align-items: center;
    flex-wrap: wrap;
}
.btn-list-item {
    width: 70px;
    height: 70px;
    margin-right: 10px;
    margin-bottom: 15px;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;

    border-radius: 6px;
    border: 1px #e5e5e5 solid;

}
/*对选择的图片进行显示*/
.picture-item > image {
    width: 70px;
    height: 70px;
    border-radius: 6px;
    border: 1px #e5e5e5 solid;
    position: relative;
}

/*取消对应的图片上传*/
.cancel-picture-upload-btn {
    width: 20px;
    height: 20px;
    border-radius: 50%;
    background-color: white;
    position: absolute;
    top: 0;
    right: 0;
}

/*图片上传按钮*/
.picture-upload-btn > image {
    width: 40px;
    height: 40px;
}
/*音频上传按钮*/
.sound-upload-btn > image {
    width: 40px;
    height: 40px;
}
/*视频上传按钮*/
.video-upload-btn > image {
    width: 40px;
    height: 40px;
}

/*获取发布日记的所在地址*/
.publish-location-address {
    width: 100px;
    height: 15px;
    margin-left: 15px;
    float: left;

}

/*不存在地理位置时显示定位按钮*/
.choose-location-address {
    width: 100px;
    height: 15px;
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    align-items: center;

    color: #8a8a8a;
    font-size: 12px;
}
.choose-location-address > image {
    width: 15px;
    height: 15px;
    margin-right: 4px;
}

/*存在则显示用户选择的地理位置*/
.show-user-choose-location-address {
    width: 100px;
    height: 15px;
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    align-items: center;

}
.address-icon {
    width: 15px;
    height: 15px;
    margin-right: 4px;
}

.show-user-choose-location-address > text {
    width: 67px;
    height: 15px;
    line-height: 15px;
    white-space: nowrap;
    text-overflow: ellipsis;
    overflow: hidden;
    font-size: 12px;
    color: #F0B27A;
}

.cancel-icon {
    width: 10px;
    height: 10px;
    margin-left: 4px;
}

/*设置日记可见类型*/
.choose-diary-visible-type {
    width: auto;
    height: 15px;
    margin-right: 15px;
    float: right;

    line-height: 15px;
    font-size: 12px;
    color: #F0B27A;
}

/*发表按钮*/
.punch-card-diary-publish-btn {
    width: auto;
    height: 50px;
    margin: 50px 15px 100px 15px;
    border-radius: 5px;

    font-size: 16px;
    color: white;
    text-align: center;
    line-height: 50px;
}

