.container{
    background-color: white;
}

/*填写圈子简介获取金币活动提示*/
.edit-project-intr-activity-notice {
    height: 30px;
    width: 100%;
    margin-bottom: 10px;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
    background-color: beige;
}

.gold-icon {
    width: 10%;
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
}
.gold-icon > image {
    width: 15px;
    height: 15px;
    margin-left: 15px;
}

.notice-message {
    width: 80%;
    height: 100%;
    line-height: 30px;
    font-size: 13px;
    color: orangered;
}
.into-btn-icon {
    width: 10%;
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: flex-end;
}
.into-btn-icon > image {
    width: 20px;
    height: 20px;
    margin-right: 12px;
}


/*编辑按钮面板：添加文字、图片、录音、视频简介等按钮*/
.edit-btn-panel {
    width: 100%;
    height: 120px;
    background-color: white;
    padding-top: 20px;
}

.edit-btn-panel-title {
    width: 100%;
    height: 40px;
    line-height: 40px;
    margin-left: 15px;
    font-size: 16px;
    color: #cccccc;
}

.edit-btn-group {
    width: 100%;
    height: 60px;

    display: flex;
    flex-direction: row;
    justify-content: space-around;

}

.edit-btn-item {
    width: 30px;
    height: 60px;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}

.edit-btn-item > image {
    width: 30px;
    height: 30px;
}
.edit-btn-item > text {
    width: 30px;
    height: 30px;
    line-height: 30px;
    font-size: 13px;
    color: #cccccc;
}

.text > image {
    width: 28px;
    height: 28px;
    border-radius: 3px;
    border: 2px #F0B27A solid;
}
.image > image {
    height: 30px;
    width: 26px;
    border-radius: 3px;
    border: 2px #F0B27A solid;
}
.sound > image {
    height: 28px;
    width: 30px;
}

/*圈子简介信息编辑、展示区域*/
.project-intr-info-list {
    width: 100%;
    height: auto;
}
/*编辑区域的操作按钮：排序上、下移，删除当前简介编辑区域*/
.intr-info-btn {
    width: auto;
    height: 40px;
    margin: 0 15px;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
}
.edit-area-title {
    height: 40px;
    width: 15%;
    line-height: 40px;
    color: black;
    font-weight: bolder;
    font-size: 15px;
}

/*上移按钮*/
.intr-info-up-order-btn {
    width: 10%;
    height: 40px;
    display: flex;
    flex-direction: column;
    justify-content: center;

}
.intr-info-up-order-btn > image {
    transform: rotate(180deg);
    height: 20px;
    width: 20px;
    border: 1px #F0B27A solid;
    border-radius: 50%;
}

.intr-info-down-order-btn {
    width: 65%;
    height: 40px;
    display: flex;
    flex-direction: column;
    justify-content: center;

}
.intr-info-down-order-btn > image {
    height: 20px;
    width: 20px;
    border: 1px #F0B27A solid;
    border-radius: 50%;
}

.intr-info-delete-btn {
    width: 10%;
    height: 40px;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: flex-end;
}
.intr-info-delete-btn > image {
    height: 10px;
    width: 10px;
    padding: 5px;
    border: 1px #F0B27A solid;
    border-radius: 50%;
}

/*文字编辑区域*/
.intr-info-text-item {
    width: auto;
    min-height: 120px;
    height: auto;
    margin: 0 15px;
}
.intr-info-text-item > textarea {
    width: 100%;
    min-height: 120px;
    height: auto;
    line-height: 1.2;
}
/*文字简介字数限制提示*/
.text-num-notice {
    width: auto;
    height: 15px;
    line-height: 15px;
    font-size: 12px;
    color: #cccccc;
    text-align: right;
    margin-bottom: 5px;
    margin-right: 15px;
}



