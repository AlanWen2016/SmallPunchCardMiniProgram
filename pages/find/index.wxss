/*搜索打卡圈子按钮*/
.search-punch-card-project-btn {
    width: auto;
    height: 35px;
    margin: 10px;
    border-radius: 5px;
    background-color: whitesmoke;

    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    align-items: center;
}

.search-punch-card-project-btn > image {
    width: 20px;
    height: 20px;
    margin-right: 5px;
    position: relative;
    left: 50%;
    margin-left: -30px;
}
.search-punch-card-project-btn > text {
    width: auto;
    font-size: 16px;
    color: #8a8a8a;
    position: relative;
    left: 50%;
    margin-left: 3px;
}

/*展示精选打卡圈子专题*/
.project-special-subject-swiper-container {
    width: 100%;
    height: 150px;
}

.project-special-subject-item {
    width: auto;
    height: 150px;
    margin: 0 10px 10px;
    border-radius: 5px;

    font-size: 16px;
    color: #F0B27A;
    line-height: 150px;
    text-align: center;
    background-color: whitesmoke;
}

/*打卡圈子类型标签*/
.punch-card-project-type {
    width: auto;
    height: auto;
    margin: 10px 10px 5px 10px;

    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    justify-content: flex-start;
    align-items: center;
}

.punch-card-project-type-item {
    width: 20%;
    height: auto;
    margin-bottom: 10px;

    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    align-items: center;

    font-size: 12px;
    color: black;
}

.punch-card-project-type-item > image {
    width: 40px;
    height: 40px;
    margin-bottom: 5px;
    border-radius: 50%;
}

/*打卡圈子推荐列表展示*/
.punch-card-project-recommend-list {
    width: auto;
    height: auto;
    margin: 0 0 0 10px;
}

.punch-card-project-recommend-list-item {
    width: 100%;
    height: auto;
    padding: 15px 0;
    /*background-color: #F0B27A;*/

    display: flex;
    flex-direction: row;
    justify-content: flex-start;

    border-bottom: 1px whitesmoke solid;
}

.project-cover-img {
    width: 100px;
    height: auto;
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    margin-right: 5px;
}
.project-cover-img > image {
    width: 100px;
    height: 60px;
}

.project-base-info {
    /*高度由js控制，使之占满父级宽度除去右边图片宽度之外的区域*/
    height: auto;
    /*background-color: cornflowerblue;*/
}

.project-name {
    width: 100%;
    height: auto;
    margin-bottom: 4px;

    font-size: 16px;
    color: black;
    font-weight: bolder;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.punch-card-info {
    height: auto;
    width: 100%;

    font-size: 12px;
    color: #8a8a8a;

    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    align-items: center;
}

.attend-num-info {
    margin-right: 15px;
}


/*没有系统推荐的打卡圈子数据提示*/
.not-recommend-punch-card-project-notice {
    width: 100%;
    height: 40px;
    line-height: 40px;
    text-align: center;
    font-size: 16px;
    color: #F0B27A;
}

.create-punch-card-project-btn {
    width: 120px;
    height: 30px;
    position: relative;
    left: 50%;
    margin-left: -60px;
    display: flex;
    flex-direction: row;
    justify-content: space-around;
    align-items: center;
    border: 1px #F0B27A solid;
    border-radius: 5px;

    font-size: 15px;
    color: #F0B27A;
}
.create-punch-card-project-btn > image {
    width: 15px;
    height: 15px;
}

